.todo-banner{
  text-align: center;
  padding: 10px 0 20px 0;
}

.todo-banner_image{
  width: 80%;
  height: 80px;
  box-shadow: 2px 2px 2px #888888;
}

.todo-tips{
  font-size: 22px;
  border-bottom: 1px solid #DDDDDD;
  margin-bottom: 20px;
  padding-bottom: 10px;
  text-shadow:2px 2px 2px #888888;
}

.todo-list{
  padding-bottom: 45px;
}
.todo-item{
  padding-left: 25px;
  margin-bottom: 10px;
  background-color: #ffffff;
  box-shadow: 2px 2px 2px #888888;
}
.todo-item_hover{
  opacity: 0.5;
}
.todo-title{
  font-size: 16px;
  padding: 5px 0;
  position: relative;
}
.todo-title::after{
  content: '';
  width: 5px;
  height: 5px;
  position: absolute;
  background-color: #AAAAAA;
  border-radius: 50%;
  left: -15px;
  top: 50%;
  transform: translateY(-50%);
}
.todo_created_time{
  font-size: 14px;
  padding: 5px 0;
  color:#AAAAAA;
  position: relative;
}
.todo_created_time::after{
  content: '';
  width: 5px;
  height: 5px;
  position: absolute;
  background-color: #AAAAAA;
  border-radius: 50%;
  left: -15px;
  top: 50%;
  transform: translateY(-50%);
}

.todo-add{
  position: fixed;
  display: flex;
  width: 91%;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  padding: 10px 0;
  background-color: #F5FFFA;
}
.todo-add_Input{
  height: 30px;
  padding: 0 8px;
  font-size: 80%;
  line-height: 38px;
  border: 1px solid #AAAAAA;
  background-color: #ffffff;
  flex: 1;
}
.todo-add_button{
  margin: 0;
  height: 32px;
  font-size: 80%;
  background: #07c160;
  color: #ffffff;
  margin-left: 30px;
}