.okr-banner{
  text-align: center;
  display: flex;
  justify-content: space-evenly;
  padding: 10px 0 20px 0;
  box-shadow: 2px 2px 2px 2px #888888;
  margin-bottom: 20px;
}

.okr-banner_image{
  width: 80px;
  height: 80px;
  box-shadow: 2px 2px 2px #888888;
}

.objective-item{
  padding: 10px;
  font-size: 18px;
  font-family: monospace;
  line-height: 26px;
  border-bottom: 1px solid #dddddd;
  font-weight: 600;
  position: relative;
  overflow: hidden;
}
.objective-item.active::after{
position: absolute;
  top: 0px;
  right: 0px;
  width: 80px;
  height: 80px;
  border: 2px solid #999;
  content: '完成';
  line-height: 78px;
  text-align: center;
  font-size: 22px;
  color: #999;
  border-radius: 50%;
  opacity: .4;
  transform: rotate(-45deg);
}
.objective-created_time{
  padding-left: 18px;
  font-size: 14px;
  color: #888888;
  position: relative;
  font-weight: normal;
}
.objective-created_time::after{
  content: '';
  width: 5px;
  height: 5px;
  background: #888888;
  position: absolute;
  left: 5px;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
}

.keyresult-info{
  display: flex;
  justify-content: space-between;
  padding: 20px 18px 5px 25px;
  font-size: 18px;
  font-family: monospace;
  font-weight: 600;
  color: #888888;
  position: relative;
}
.keyresult-info::after{
  content: '';
  position: absolute;
  top: 50%;
  left: 18px;
  transform: translateX(-50%);
  width:0;
  height:0;
  border-top:5px solid transparent;
  border-bottom:5px solid transparent;
  border-left:5px solid #888888;
}
.keyresult-tag{
  font-size: 12px;
  font-weight: 100;
}


.todo-item{
  line-height: 24px;
}
.todo-title{
  display: inline-block;
  margin-left: 18px;
  padding-left: 28px;
  font-size: 14px;
  color: #888888;
  position: relative;
  font-weight: normal;
}
.todo-title::after{
  content: '';
  width: 5px;
  height: 5px;
  background: #888888;
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
}

.todo-title.active{
  position: relative;
}
.todo-title.active::before{
  position: absolute;
  content: '';
  width: 100%;
  height: 1px;
  background: #888888;
  top: 50%;
  left: 0;
}